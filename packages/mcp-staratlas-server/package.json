  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@solana/web3.js": "^1.95.0",
    "@staratlas/sage": "^0.17.0",
    "@staratlas/galactic-marketplace": "^0.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
